<p>
  <h1><%= @article.title %></h1>
</p>

<% unless @article.file_name.nil? %>
	<p>
  	<%= image_tag("/uploads/#{@article.file_name}", width: '200') %>
  </p>
<% end %>

<p>
  <%= @article.text %>
</p>



<% if signed_in? %>
	<h2> Add a comment:</h2>
	<%= form_for([@article, @article.comments.build]) do |f| %>
		<p>
			
			<%= f.text_area :body %>
		</p>
		<p>
		  <%= f.submit %>
		</p>
	<% end %>
<% end %>

<%= render 'comments' %>

<div class="back_edit_link">
<% if user_signed_in? %>
 <%= link_to 'Edit', edit_article_path(@article) %><br>
<% end %>
<%= link_to '<< Back', articles_path %>
</div>
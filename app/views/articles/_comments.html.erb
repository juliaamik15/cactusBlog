<div class="product-reviews">
    <% @comments.each do |comment| %>
        <div class="row">
            <hr>
            <p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small>

            <% if signed_in? && current_user.role=="admin" %>
            	<%= link_to 'Destroy', article_comment_path(comment.article, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %> </p>
            <p><%= comment.body %></p>
        </div>
    <% end %>
</div>
<%= will_paginate @comments %>